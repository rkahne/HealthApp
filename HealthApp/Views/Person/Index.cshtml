@model IEnumerable<HealthApp.Models.PersonIndexViewModel>
@{
    ViewBag.Title = "Person";
}

<h2>Who Is Registered?</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Height</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personIndexViewModel in Model)
        {
            <tr>
                <td>@personIndexViewModel.first_name</td>
                <td>@personIndexViewModel.last_name</td>
                <td>@personIndexViewModel.dob</td>
                <td>@personIndexViewModel.height</td>
                <td>@Html.ActionLink("Add a Reading", "AddReading", "Person", new { identifier = personIndexViewModel.id },new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("View Readings", "ViewReadings","Person", new { identifier = personIndexViewModel.id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Register a New Person", "Create","Person",new { @class = "btn btn-primary"})